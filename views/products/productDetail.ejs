<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include ('../partials/head') %>
    </head>
    
    <body>
        <%- include ('../partials/header') %>
    
    <main class="main-product-detail">
         <div class="card">
            <div class="imgBox">
                <img src="./img/<%=product.product_img%>" alt="<%= product.product_name %>">
            </div>
            <div class="details">
                <div class="name-product">
                    <h3>
                        <%= product.product_name %> 
                    </h3>
                </div>
                <div class="description">
                    <h4>Descripci√≥n:</h4><br>
                    <p><%= product.description_name %> </p>
                </div>
                <div class="caja-talle">
                    <div class="size">
                        <h4>Talle: <%= product.product_size %> </h4>
                    </div>
                </div>    
                <div class="buy">
                    <div class="price">
                        <span>$ <%= product.product_price %></span>
                    </div>
                    <div class="boton">
                        <a href="">COMPRAR</a>
                    </div>
                </div>
                <div class="edicion">
                    <div class="Editar">
                        <button>
                            <a href="/products/edith/<%= product.id %>">Editar</a>
                        </button>
                    </div>
                    <div class="borrar">
                        <form action="/products/delete/<%= product.id %>?_method=DELETE" method="POST" enctype="multipart/form-data" style="display:inline-flex">
                            <button type="submit">Borrar</button>
                        </form>                        
                    </div>
                </div>
            </div>
         </div>
        
    </main>

        <%- include ('../partials/footer') %>

</body>
</html>